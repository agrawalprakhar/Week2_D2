@model Week_2_Day_2.Models.Product

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-success">Add Product</h1>

<hr class="w-25" />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label required"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label required"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-sm btn-primary mt-3" />
                <a asp-action="Index" class="btn btn-sm btn-success mt-3 ms-2">Back to List</a>
            </div>
        </form>
    </div>
</div>



